<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activities.MainActivity"
    android:background="@drawable/cafe_combo">

    <TextView
        android:id="@+id/make_your_combo_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/black_overlay"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Arma tu combo"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/options_container"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/make_your_combo_title"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/chicken"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="Pollo"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_border" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/lomito"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="Lomito"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_border"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/frica_bread"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="Jamón"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_border" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/molde_bread"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="Queso"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_border"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/cake"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="Tómate"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_border" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5">
                <Button
                    android:id="@+id/ice_cream"
                    android:layout_height="wrap_content"
                    android:layout_width="100dp"
                    android:text="Champiñones"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_border"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/result_combo"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textColor="@color/black_overlay"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Tu combo es: \n Lorem Ipsum dolor sit amet, Lorem Ipsum dolor sit amet"
        android:gravity="center_horizontal"
        android:layout_below="@+id/options_container"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>